<Window x:Class="BankApp.Windows.RefillWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankApp.Windows"
        mc:Ignorable="d"
        Title="Пополнение счета" MaxHeight="330" MaxWidth="590" MinHeight="330" MinWidth="590">
    <Window.Resources>
        <ResourceDictionary Source="/Style/MainStyle.xaml" />
    </Window.Resources>
    <Grid>
        <StackPanel Margin="10,10,10,10">
            <Label Content="Пополнение счета" Style="{StaticResource MainTitleLoginStyle}" Margin="0,0,0,15"/>
            <Label Style="{StaticResource LMTDashboard}">Сумма пополнения</Label>
            <TextBox Style="{StaticResource TBLoginStyle}" x:Name="ReplenAmouunt"/>
            <Label x:Name="BalanceLbl" Style="{StaticResource LMTDashboard}"/>
            <Button Click="RefillBtn" Style="{StaticResource BTLoginStyle}" Margin="0,20,0,0">Пополнить</Button>
        </StackPanel>
    </Grid>
</Window>
